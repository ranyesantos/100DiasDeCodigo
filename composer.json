{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "he4rt/100diasdecodigo",
    "type": "project",
    "description": "Platform for 100 Days of Code challenge.",
    "keywords": [
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "dutchcodingcompany/filament-socialite": "^3.0",
        "filament/filament": "^4.2.3",
        "filament/spatie-laravel-media-library-plugin": "^4.2.3",
        "filament/spatie-laravel-tags-plugin": "^4.2.3",
        "he4rt/he4rt-core": ">=1",
        "he4rt/portal": ">=1",
        "he4rt/submission": ">=1",
        "he4rt/user": ">=1",
        "internachi/modular": "^2.3",
        "laravel/framework": "^12.39.0",
        "laravel/sanctum": "^4.2.0",
        "laravel/tinker": "^2.10.1",
        "owenvoke/blade-fontawesome": "^3.0",
        "tpetry/laravel-postgresql-enhanced": "^3.4.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16.1",
        "barryvdh/laravel-ide-helper": "^3.6.0",
        "driftingly/rector-laravel": "^2.1.3",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.8.0",
        "laravel/boost": "^1.8.2",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.25.1",
        "laravel/sail": "^1.48.1",
        "laravel/telescope": "^5.15.0",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "pestphp/pest": "^4.1.4",
        "pestphp/pest-plugin-faker": "^4.0.0",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "pestphp/pest-plugin-livewire": "^4.0.1",
        "phpstan/extension-installer": "^1.4.3",
        "rector/rector": "^2.2.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "ide-helper": [
            "@php artisan ide-helper:generate -q",
            "@php artisan ide-helper:meta -q",
            "@php artisan ide-helper:models -q -N"
        ],
        "setup": [
            "composer install",
            "npm install",
            "composer run-script post-root-package-install",
            "composer run-script post-create-project-cmd",
            "@php artisan key:generate --ansi",
            "@php artisan storage:link --ansi",
            "composer run-script ide-helper"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "pint": "vendor/bin/pint --parallel",
        "test:pint": "vendor/bin/pint --test --parallel",
        "rector": "vendor/bin/rector",
        "test:rector": "vendor/bin/rector --dry-run",
        "phpstan": "vendor/bin/phpstan analyse --ansi",
        "test:phpstan": "vendor/bin/phpstan analyse --ansi",
        "test:unit": "vendor/bin/pest --parallel --compact --group=unit",
        "test:feature": "vendor/bin/pest --parallel --compact --group=feature",
        "test:browser": "vendor/bin/pest --parallel --compact --group=browser",
        "test:cov": "vendor/bin/pest --parallel --compact --coverage",
        "check": [
            "@test:rector",
            "@test:pint",
            "@test:phpstan"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "vendor/bin/pest --parallel --compact"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope",
                "barryvdh/laravel-debugbar"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "bump-after-update": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "audit": {
            "abandoned": "report"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "app-modules/*",
            "options": {
                "symlink": true
            }
        }
    ]
}
